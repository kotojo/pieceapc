<% @computers.each do |computer| %>
  <div class="items">
  <h3>Name</h3>
  <p><%= computer.name %> by <%= computer.user %></p>
  <h4>Price</h4>
  <p><%= number_to_currency(computer.price) %></p>
  <h4>Parts</h4>
  <ul>
    <% computer.parts.each do |part| %>
      <li><%= part.name %></li>
    <% end %>
  </ul>
  <p><strong>Rating: </strong><%= computer.score %></p>
  <%= link_to("", like_computer_path(computer), method: :put, :class => 'btn btn-small btn-custom glyphicon glyphicon-thumbs-up')  %>
  <%= link_to("", dislike_computer_path(computer), method: :put, :class => 'btn btn-small btn-custom glyphicon glyphicon-thumbs-down')  %>
  <%= link_to("", unlike_computer_path(computer), method: :put, :class => 'btn btn-small btn-custom glyphicon glyphicon-minus')  %>
  </div>
<% end %>
<%= will_paginate @computers, class: "flickr_pagination col-xs-12" %>

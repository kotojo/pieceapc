<div class="page-header">
  <%= link_to new_part_path, class: 'btn btn-custom' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Add Parts
  <% end %>
  <%= link_to computers_path, class: 'btn btn-custom' do %>
    <span class="glyphicon glyphicon-arrow-left"></span>
    Back
  <% end %>
  <%= link_to edit_computer_path, class: 'btn btn-custom2' do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
    Edit
  <% end %>
  <h1><%= @computer.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= @computer.description %></dd>
  <dt>Price:</dt>
  <dd><%= number_to_currency(@computer.price) %></dd>
</dl>
  <% if @arr.count > 0 %>
    <%= render 'partlist' %>
  <% end %>

